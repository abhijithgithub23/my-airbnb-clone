<% layout("/layouts/boilerplate") %>

<script>
    
    const mapToken="<%= process.env.MAP_TOKEN %>";
    const coordinates=<%- JSON.stringify(listItem.geometry.coordinates) %>
</script>

<body>
    <div class="row mt-4">
        <div class="col-8 offset-3">
            <h3><%= listItem.title %></h3>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-6 offset-3">
            <div class="card show-card listing-card">
                <img src="<%= listItem.image.url %>" class="card-img-top show-img" alt="Image">
                <div class="card-body">
                    <p class="card-text"><i>@<%= listItem.owner.username %></i></p>
                    <p class="card-text"><%= listItem.description %></p>
                    <p class="card-text">&#8377; <%= listItem.price.toLocaleString("en-IN") %></p>
                    <p class="card-text"><%= listItem.location %></p>
                    <p class="card-text"><%= listItem.country %></p>
                </div>
            </div>
        </div>
    </div>

    <% if(currUser && currUser._id.equals(listItem.owner._id)){ %>
        <div class="show-btns row mt-3">
            <div class="col-auto offset-3">
                <a href="/listings/<%=listItem._id%>/edit" class="btn btn-dark">Edit</a>
            </div>
            <div class="col-auto">
                <form method="post" action="/listings/<%= listItem._id %>?_method=DELETE">
                    <button type="submit" class="btn btn-dark add-btn">Delete</button>
                </form>
            </div>
        </div>
    <% } %>

    <div class="col-8 mx-auto mb-3 mt-5">
        <% if(currUser){ %>
            <hr>
            <h4 class="text-center mt-4">Leave a Review</h4>
            <form action="/listings/<%= listItem._id%>/reviews" method="post" novalidate class="needs-validation">
                
                <div class="mb-3 mt-3 text-center">
                    <label for="rating" class="form-label d-block">Rating</label>
                    <div class="rating d-inline-block">
                        <% for(let i=5; i>=1; i--) { %>
                            <input type="radio" id="star<%=i%>" name="review[rating]" value="<%=i%>" />
                            <label for="star<%=i%>">â˜…</label>
                        <% } %>
                    </div>
                </div>

                <div class="mb-3 mt-3 text-center">
                    <label for="comment" class="form-label d-block">Comments</label>
                    <textarea 
                        name="review[comment]" 
                        id="comment" 
                        cols="30" 
                        rows="5" 
                        class="form-control mx-auto" 
                        placeholder="Leave a Comment"
                        required
                        style="max-width: 500px;"
                    ></textarea>
                    <div class="invalid-feedback">Please give some comments</div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-outline-dark review-submit-btn">Submit</button>
                </div>
            </form>
            <hr>
        <% } %>
    </div>
    <% if(listItem.reviews.length>0){ %>
    <div class="container">
        <h4 class="text-center mt-5">All Reviews</h4>
        <div class="row g-4 justify-content-center my-4">
            <% for (review of listItem.reviews) { %>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <h5 class="card-title">@<%= review.author.username  %></h5>
                            <p class="card-text">
                                <% for (let i = 1; i <= 5; i++) { %>
                                    <% if (i <= review.rating) { %>
                                        <span style="color: gold;">&#9733;</span>
                                    <% } else { %>
                                        <span style="color: lightgray;">&#9734;</span>
                                    <% } %>
                                <% } %>
                            </p>
                            <p class="card-text"><%= review.comment %></p>
                            <% if (currUser && review.author && review.author._id.toString() === currUser._id.toString()) { %>
                                <form class="mt-3" method="post" action="/listings/<%=listItem._id%>/reviews/<%=review._id%>?_method=DELETE">
                                    <button class="btn btn-sm btn-dark" type="submit">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <% } %> 
    
    <div class="col-8 offset-3 mb-3">
        <h4>Where you'll be</h4>
        <div id="map"></div>
    </div>

    <script src="/js/map.js"></script>
</body>
